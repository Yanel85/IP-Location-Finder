{
  "manifest_version": 3,
  "name": "IP Location Finder",
  "version": "1.2",
  "description": "查找页面选中IP地址对应的国家地区。",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "web_accessible_resources": [
      {
        "resources": ["icon.svg"],
        "matches": ["<all_urls>"]
      }
    ]
}